#user-bar
  - if logged_in?
    #user-bar-greeting
      &== Logged in as #{current_user.login}

      %span#user-bar-action== (#{link_to "Log out", logout_path, {:title => "Log out"}})
      = precede ',' do
        = link_to 'Admin Menu', :controller => 'admin'

  - else
    #user-bar-greeting= link_to_login_with_IP 'Not logged in', :style => 'border: none;', :id => 'link_to_login'
    #login_dialog{:style => "display:none;"}= render :partial => 'sessions/new'
